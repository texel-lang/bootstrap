{
  "compilerOptions": {
    "baseUrl": "./src",
    "diagnostics": true,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "pretty": true,
    "strict": true,
    "target": "es2018",
    "moduleResolution": "node"
  },
  "exclude": [
    "build/",
    "dist/"
  ]
}
